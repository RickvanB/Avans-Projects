@using EfentHandler.Domain.Model;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#333">
    <title>EfentHandler - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div id="sidebar" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                @if ((user)Session["User"] != null)
                {
                    <a href="#">
                        Welkom, @( ((user)Session["User"]).FirstName ).
                    </a>
                    <a href="/Availabilities">Mijn Beschikbaarheid</a>
                    <a href="/Schedules">Mijn Rooster</a>
                    <a href="/Assignments">Mijn Opdrachten</a>
                    <a href="/Login/Out">Uitloggen</a>
                }
                else
                {
                    <a href="/Login">Inloggen</a>
                }

            </div>

            <!-- Button to open/close the nav -->
            <span onclick="openNav()">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </span>

            <div class="festi-logo">
                <span class="festi-1">FESTI</span> <span class="festi-2">SPEC</span>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EfentHandler</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/JavaScript.js")
    @RenderSection("scripts", required: false)
</body>
</html>
